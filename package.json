{
  "name": "@oorabona/kysely-duckdb",
  "version": "0.4.0",
  "description": "Modern DuckDB dialect for Kysely with @duckdb/node-api",
  "keywords": [
    "kysely",
    "duckdb",
    "typescript",
    "sql",
    "query-builder",
    "database",
    "analytics",
    "olap",
    "node-api"
  ],
  "author": "Olivier Orabona <olivier.orabona@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/oorabona/kysely-duckdb#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oorabona/kysely-duckdb.git"
  },
  "bugs": {
    "url": "https://github.com/oorabona/kysely-duckdb/issues"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test:watch": "vitest",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "biome check --write .",
    "lint:check": "biome check .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "typecheck": "tsc --noEmit",
    "typecheck:tests": "tsc --noEmit -p tsconfig.tests.json",
    "clean": "rimraf dist",
    "prepare": "simple-git-hooks",
    "examples": "pnpm run examples:basic",
    "examples:basic": "pnpm tsx examples/basic-usage.ts",
    "examples:external": "pnpm tsx examples/external-data.ts",
    "examples:extensions": "pnpm tsx examples/extensions.ts",
    "examples:migrations": "pnpm tsx examples/migrations.ts",
    "examples:plugins": "pnpm tsx examples/plugins.ts",
    "examples:streaming": "pnpm tsx examples/streaming.ts",
    "examples:advanced": "pnpm tsx examples/advanced-queries.ts",
    "examples:serial": "pnpm tsx examples/serial.ts",
    "examples:performance": "pnpm tsx examples/performance.ts",
    "examples:monitoring": "pnpm tsx examples/performance-monitoring.ts",
    "examples:logging": "pnpm tsx examples/native-logging.ts",
    "examples:all": "pnpm run examples:basic && pnpm run examples:external && pnpm run examples:extensions && pnpm run examples:migrations && pnpm run examples:plugins && pnpm run examples:streaming && pnpm run examples:advanced && pnpm run examples:serial && pnpm run examples:performance && pnpm run examples:monitoring && pnpm run examples:logging",
    "build:examples": "pnpm tsc --noEmit --project examples/tsconfig.json",
    "release": "release-it-preset default",
    "release:manual": "release-it-preset manual-changelog",
    "release:hotfix": "release-it-preset hotfix",
    "changelog:update": "release-it-preset update"
  },
  "dependencies": {
    "@duckdb/node-api": "1.4.0-r.2",
    "kysely": "^0.28.7"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@oorabona/release-it-preset": "^0.6.0",
    "@types/node": "^24.6.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "nano-staged": "^0.8.0",
    "release-it": "^19.0.5",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.13.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true,
    "registry": "https://registry.npmjs.org/"
  },
  "nano-staged": {
    "*.{ts,tsx,js,jsx}": [
      "pnpm run format",
      "pnpm run lint:check"
    ],
    "*.{json,md,yml,yaml}": [
      "pnpm run format"
    ]
  },
  "peerDependencies": {
    "@duckdb/node-api": ">=1.3.2-alpha.0",
    "kysely": ">=0.28.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec nano-staged",
    "pre-push": "pnpm run typecheck && pnpm run typecheck:tests && pnpm run test:coverage && pnpm run build"
  },
  "packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b"
}
